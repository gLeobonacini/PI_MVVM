<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".50"
        android:scaleType="centerCrop"
        android:src="@drawable/log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <ImageView
            android:layout_width="420dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/marvel_geek_no_bg" />

        <Button
            android:id="@+id/btnLoginVisitante"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="370dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/visitSignIn"
            android:backgroundTint="@color/visitColor"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="440dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/faceSignIn"
            android:backgroundTint="#B33E5994"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_facebook_app_logo"
            />

        <Button
            android:id="@+id/btnLoginTwitter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="510dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/twitterSignIn"
            android:backgroundTint="@color/twitterColor"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_twitter"/>

        <Button
            android:id="@+id/btnLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="580dp"
            android:backgroundTint="@color/googleColor"
            android:drawableLeft="@drawable/ic_google"
            android:text="@string/googleSignIn"
            android:textColor="@color/white" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>